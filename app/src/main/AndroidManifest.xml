<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MindSpace"
        tools:targetApi="tiramisu"
        android:enableOnBackInvokedCallback="true">

        <activity
            android:name=".view.emoticon.stories.StoriesActivity"
            android:exported="false" />
        <activity
            android:name=".view.emoticon.detail.DetailStoryActivity"
            android:exported="false" />
        <activity
            android:name=".view.question.QuestionActivity"
            android:exported="false" />
        <activity
            android:name=".view.emoticon.EmoticonDetectionActivity"
            android:exported="false" />
        <activity
            android:name=".view.addpost.AddPostActivity"
            android:exported="false" />
        <activity
            android:name=".view.getstarted.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.register.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".view.useraccount.editprofileuser.EditProfileUserActivity"
            android:exported="false" />
        <activity
            android:name=".view.useraccount.profileuser.UserProfileActivity"
            android:exported="false" />
        <activity
            android:name=".view.login.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".view.sharingsession.SharingSessionActivity"
            android:exported="false" />
        <activity
            android:name=".view.home.MainActivity"
            android:exported="false" />
    </application>

</manifest>